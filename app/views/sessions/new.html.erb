<center>
  <h4>Log in</h4>

  <div class="well">
    <%= form_tag 'login' do %>
      <div class='control-group'>
        <%= label_tag :name %>
        <%= text_field_tag :name %>
      </div>
      <div class='control-group'>
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </div>
      <%= submit_tag 'Login', class: 'btn btn-success-lg' %>
    <% end %>
  </div>
</center>